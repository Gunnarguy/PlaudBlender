{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PlaudBlender: Run GUI",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/gui.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "PlaudBlender: Pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["tests", "-q"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "PlaudBlender: MCP server",
      "type": "python",
      "request": "launch",
      "module": "scripts.mcp_server",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
